
<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Department</th>
      <th>Code</th>
      <th>Professor</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @reviews.each_with_index do |review, index| %>
      <tr>
        <td><%= review[0].course_title %></td>
        <td><%= review[0].course_code %></td>
        <td><%= review[0].professor_name %></td>
        <td><%= review[0].university_name %></td>
        <td><%= link_to 'Show', indexlower_path(:index => index) %></td>
        <!--<td><#%= link_to 'Edit', edit_review_path(review) %></td>-->
        <!--<td><#%= button_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

