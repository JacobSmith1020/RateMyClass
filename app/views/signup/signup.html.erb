<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row h-100 d-flex justify-content-center align-items-center">
      <div class="col-md-9 col-lg-6 col-xl-5" align="center">
        <br><br><br><br><br><br>
        <%= image_tag("logo.png", class: "img-fluid") %>
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_tag homepage_path, :method => :post do %>
          <br><br><br><br><br><br><br><br>
          <div class="d-flex flex-row align-items-start justify-content-start justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign up</p>
          </div>
          
          <div class="form-outline mb-4">
            <label class="form-label" for="user_field">Username</label>
            <%= text_field(:user, :field, class: "form-control form-control-lg", placeholder: "Enter username", style: "width:500px") %>
          </div>
          
          <div class="form-outline mb-3">
            <label class="form-label" for="pass_field">Password</label>
            <%= password_field(:pass, :field, class: "form-control form-control-lg", placeholder: "Enter password", style: "width:500px") %>
          </div>
          
          <br>
          <div class="form-outline mb-3">
            <label class="form-label" for="typeofuser">Type of User</label>
            <%= select_tag(:typeofuser, options_for_select(["student", "professor", "admin"], "student"), class: "form-select form-select-sm") %>
          </div>
          <!-- 2 column grid layout for inline styling -->
          <!--<div class="row mb-4">-->
          <!--  <div class="col d-flex justify-content-center">-->
              <!-- Checkbox -->
          <!--    <div class="form-check">-->
          <!--      <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked/>-->
          <!--      <label class="form-check-label" for="form1Example3"> Remember me </label>-->
          <!--    </div>-->
          <!--  </div>-->
      
          <!--  <div class="col">-->
              <!-- Simple link -->
          <!--    <a href="#!">Forgot password?</a>-->
          <!--  </div>-->
          <!--</div>-->
          
          <div>
            <p style="color:red;", id="notice"><%= notice %></p>
          </div>
          
          <br>
          
          <div class="text-start text-lg-start mt-4 pt-2">
            <%= submit_tag('Sign up', :class => "btn btn-primary btn-lg", style: "padding-left: 2.5rem; padding-right: 2.5rem;") %>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
</section>